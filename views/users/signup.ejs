<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>signup on   Wanderlust</h1>
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3 col"> 
            <label for="username" class="form-label" >username </label>
            <input name="username"  id="username" type="text" class="form-control" required>
            <div class="valid-feedback">looks good</div>
            <div class="invalid-feedback">username field is required</div>
        </div>
        <div class="mb-3 col"> 
            <label for="email" class="form-label" >Email </label>
            <input name="email"  id="username" type="email" class="form-control" required>
        </div>
        <div class="mb-3 col"> 
            <label for="password" class="form-label" >Password</label>
            <input name="password"  id="password" type="text" class="form-control" required>
        </div>
        <button class="btn btn-success">SignUp</button>
      </form>  
    </div>
</div>